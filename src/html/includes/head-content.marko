<meta charset="utf-8">
<meta http-equiv="x-ua-compatible" content="ie=edge">

<title>${data.page.title}</title>

<meta name="description" content="Put your description here">
<meta name="viewport" content="width=device-width, initial-scale=1">

<if(data.app.isProd === true && data.app.domainName)>
<link rel="preconnect" href=`//${data.app.domainName}` />
<link rel="dns-prefetch" href=`//${data.app.domainName}` />
</if>

<if(data.app.isProd === true)>
<for|file| of=data.app.assets.scripts>
<link rel="preload" as="script" href=`${file}` />
</for>
</if>

<!-- Disable tap highlight on IE -->
<meta name="msapplication-tap-highlight" content="no">

<!-- Web Application Manifest -->
<link rel="manifest" href="/manifest.json">

<!-- Add to homescreen for Chrome on Android -->
<meta name="mobile-web-app-capable" content="yes">
<meta name="application-name" content="ES6 Web app boilerplate">
<link rel="icon" type="image/png" sizes="192x192"  href="/images/touch/android-icon-192x192.png">

<!-- Add to homescreen for Safari on iOS -->
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black">
<meta name="apple-mobile-web-app-title" content="ES6 Web app boilerplate">
<link rel="apple-touch-icon" sizes="180x180" href="/images/touch/apple-icon-180x180.png">

<!-- Color the status bar on mobile devices -->
<meta name="theme-color" content="#327CCB">

<!-- SEO: If your mobile URL is different from the desktop URL, add a canonical link to the desktop page https://developers.google.com/webmasters/smartphone-sites/feature-phones -->
<!--
<link rel="canonical" href=`http://www.${data.app.domainName}/`>
-->


<for|file| of=data.app.assets.styles>
<link rel="stylesheet" href=`${file}`>
</for>

<!-- Load modern JS in head to speed up the download of the files
https://v8.dev/features/modules#defer - Modules are deferred by default
This means that <script type="module"> Will download as html parser runs
and it will execut at the end of it.

<script type="module" async> will run once its download is complete.
-->

<if(data.app.assets.runtimeContent)>
<script type="module">${data.app.assets.runtimeContent}</script>
</if>

<for|file| of=data.app.assets.scripts>
<script type="module" src=`${file}`></script>
</for>
